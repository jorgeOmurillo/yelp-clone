<% include ../partials/header %>

<div class="container">
    <header class="jumbotron">
        <div class="container">
            <h1>Welcome to YelpCamp</h1>
            <p>View our hand-picked campgrounds from Honduras</p>
            <p>
                <a class="btn btn-primary btn-large" href="/campgrounds/new">Add a new Campground.</a>
            </p>
        </div>
    </header>

    <div class="row">
        <div class="col-lg-12">
            <h3>Popular Campground</h3>
        </div>
    </div>

    <div class="row text-center" style="display:flex; flex-wrap: wrap;">
        <% for (var i=0; i<campground.length; i++) { %>
            <div class="col-md-3 col-sm-6">
                <div class="thumbnail">
                    <img src="<%= campground[i].image %>">
                    <div class="caption">
                        <h4><%= campground[i].name %></h4>
                    </div>
                    <p>
                    <a href="/campgrounds/<%= campground[i]._id %>" class="btn btn-primary">More Info</a>
                    </p>
                </div>
            </div>
        <% } %>
    </div>
</div>

<% include ../partials/footer %>
